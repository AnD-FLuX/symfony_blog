{% extends 'base.html.twig' %}

{% block title %}Post #{{ post.id }}
{% endblock %}

{% block body %}
  <div class="container mt-5">
    <h2>Post #{{ post.id }}
    </h2>
    <div class="mb-5">
      <div class="card h-100 shadow">
        <div class="card-body">
          <h2 class="card-title">{{ post.title }}</h2>

          <p style="float:right">&nbsp;|
            {{ post.createdAt ? post.createdAt|date("F j, Y, g:i a") : ' ' }}</p>
          <p style="float:right">
            {{ post.user }}
          </p>
        </div>

        <img class="ml-3" src="{{ asset('uploads/post/') }}{{ post.image }}" style="width: 200px;">

        <h4 class="card-body">{{ post.content }}</h4>

      </div>
      <div class="card-footer shadow">

        <a class="btn btn-warning" href="{{ path('post_edit', {'id': post.id}) }}">Edit post</a>
        <br>
        <br>
        {{ include('post/_delete_form.html.twig') }}
      </div>
    </div>
  </div>

{% endblock %}
